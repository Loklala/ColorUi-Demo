
.tabpage{
	height: 100%;
	width: 100%;
}
.show{
	display: block;
}
.hide{
	display: none;
}
.bg-gradual-blue{
	background: -webkit-gradient(linear,left top, right top,from(#3396e9),to(#1ab7b9));
	background: -o-linear-gradient(left,#3396e9,#1ab7b9);
	background: linear-gradient(to right,#3396e9,#1ab7b9);
}
.nav{
	margin-left: 0%;
	margin-top: 5rpx;
	width: 100%;
}
.cu-item{
	padding: 0rpx 0rpx;
	margin: 0rpx 0rpx;
	text-align: center;
	width: 50%;
}
.title{
		color: #444444;
		text-align: left;
		width: 180rpx;
}
.btn{
	background: -webkit-gradient(linear,left top, right top,from(#3396e9),to(#1ab7b9));
	background: -o-linear-gradient(left,#3396e9,#1ab7b9);
	background: linear-gradient(to right,#3396e9,#1ab7b9);
	margin-top: 50rpx;
	width: 96%;
	margin-left: 2%;
